<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="235.0" prefWidth="264.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="codis.whatsapp.GUI.ControladorLogin">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="welcomeText" text="Inicio de sesión:" textAlignment="CENTER" />
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <Label text="Nombre de usuario:" />
         <TextField fx:id="cuadroTextoNombreUsuario" />
      </children>
   </VBox>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <Label text="Contraseña:" />
         <PasswordField fx:id="cuadroTextoContrasena" />
      </children>
   </VBox>
  <Button fx:id="botonIniciarSesion" onAction="#iniciarSesion" text="Iniciar Sesión" />
</VBox>
